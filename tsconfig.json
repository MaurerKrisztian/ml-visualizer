{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "noUnusedLocals": false,        // Don't error on unused variables
    "noUnusedParameters": false,     // Don't error on unused parameters
    "noImplicitAny": false,         // Allow implicit any types
    "noFallthroughCasesInSwitch": false,  // Don't require breaks in switch cases
    "allowUnusedLabels": true,      // Allow unused labels
    "allowUnreachableCode": true,   // Allow unreachable code
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}